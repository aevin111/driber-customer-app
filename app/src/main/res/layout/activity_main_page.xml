<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:visibility="visible"
    tools:context="com.bitsplease.driber.driberandroid.MainPage">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="434dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/login"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/userPassword"
        android:text=""
        android:textAlignment="viewStart"
        android:visibility="visible" />

    <EditText
        android:id="@+id/userEmailAddress"
        android:layout_width="900px"
        android:layout_height="130px"
        android:layout_above="@+id/textView2"
        android:layout_alignStart="@+id/userPassword"
        android:layout_marginBottom="14dp"
        android:background="@drawable/txtbox"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="EMAIL"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="900px"
        android:layout_height="130px"
        android:autoText="false"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:background="@drawable/txtbox"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="PASSWORD"
        android:textColorHint="#ffffff"/>

    <Button
        android:id="@+id/registerUser"
        android:layout_width="317px"
        android:layout_height="139px"
        android:layout_marginBottom="49dp"
        android:background="@drawable/signup"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/loginButton" />

    <TextView
        android:id="@+id/Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:layout_above="@+id/userEmailAddress"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="317px"
        android:layout_height="139px"
        android:layout_marginBottom="16dp"
        android:background="@drawable/login_btn"
        android:visibility="visible"
        android:layout_above="@+id/registerUser"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
